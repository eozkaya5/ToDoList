
@model TodoList.Models.Entites.Todo
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
</head>
<body>
    <h1>Yapılacak İşi Düzenle</h1>
    <hr />
    <div id="section2" class="che">
        <form asp-controller="Todo" asp-action="Edit" method="post" >
            <input type="hidden" asp-for="Id" />
            <label>Liste Adı</label>
            <div>
                <input type="text"  class="form-control"asp-for="Name" /><br />
            </div>
            <label>Oluşturma Tarihi</label>
            <div>
                <input type="text" asp-for="DateTime" class="form-control" value="@DateTime.Now.ToShortDateString()" />
            </div>
            <h1></h1>
            <button type="submit">Düzenle</button>
        </form>
    </div>
</body>
</html>
